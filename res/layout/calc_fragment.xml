<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/text_result" android:gravity="right" android:textSize="32sp" android:singleLine="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_process" android:gravity="right" android:singleLine="true" android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="right">
        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/space" android:layout_gravity="center" android:layout_weight="3"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="削除"
                android:id="@+id/btn_delete" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/btn_7" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/btn_8" android:layout_gravity="left" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/btn_9" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/btn_devide" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout">
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="4"
                android:id="@+id/btn_4" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="5"
                android:id="@+id/btn_5" android:layout_gravity="left" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="6"
                android:id="@+id/btn_6" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:text="*"
                android:id="@+id/btn_multiply" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout1">
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="1"
                android:id="@+id/btn_1" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="2"
                android:id="@+id/btn_2" android:layout_gravity="left" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="3"
                android:id="@+id/btn_3" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:text="-"
                android:id="@+id/btn_minus" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="."
                android:id="@+id/btn_dot" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="0"
                android:id="@+id/btn_0" android:layout_gravity="left" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="="
                android:id="@+id/btn_eq" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:text="+"
                android:id="@+id/btn_plus" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

